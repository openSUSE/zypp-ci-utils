#! /bin/bash

function ascii_good()
{
cat <<'EOF'
                  ____
      ____       /    \
     |    \      |    |
     \     \     | . .|
      \ . ' \    |    |
       \     \   | . .|
        \ . ' \  |    |
       __\     \_| . .|
      /   \ . '       |
      \   _\_______   |
     __\ (         \  |
    /   \ \_____.   \ |
    \   \`---'  \    \|
     \   \      /     |
      '---'    /      |
        \      '      /
         \___________/

             Done!

EOF
return ${1:-0}
}

function ascii_bad()
{
cat <<'EOF'

        (   )
     (   ) (
      ) _   )
       ( \_
     _(_\ \)__
    (____\___))

      OOps :(

EOF
return ${1:-1}
}
